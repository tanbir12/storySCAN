<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>storySCAN - QR Scanner</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', Arial, sans-serif;
      background: linear-gradient(to right, #83a4d4, #b6fbff);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 20px;
      color: #333;
    }

    h1 {
      margin-bottom: 20px;
      font-size: 2rem;
      color: #2c3e50;
      text-align: center;
    }

    #reader {
      width: 100%;
      max-width: 400px;
      background: #ffffffcc;
      border-radius: 16px;
      padding: 20px;
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    }

    #result {
      margin-top: 20px;
      font-size: 18px;
      color: green;
      text-align: center;
      word-wrap: break-word;
    }

    /* Style scanner buttons */
    button.html5-qrcode-element {
      background-color: #27ae60 !important;
      color: white !important;
      border: none !important;
      padding: 12px 24px !important;
      margin-top: 15px;
      margin-bottom: 10px;
      border-radius: 10px !important;
      font-size: 16px !important;
      cursor: pointer;
      transition: background-color 0.3s;
      width: 100%;
      max-width: 250px;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }

    button.html5-qrcode-element:hover {
      background-color: #219150 !important;
    }

    /* Style the camera select dropdown */
    select.html5-qrcode-select-camera {
      width: 100%;
      max-width: 250px;
      margin: 10px auto;
      padding: 10px;
      font-size: 16px;
      border-radius: 8px;
      border: 1px solid #ccc;
      display: block;
      text-align: center;
      background: #fff;
    }

    /* Style "Scan an Image File" button */
    .html5-qrcode-button-file-selection {
      background-color: #3498db !important;
      color: white !important;
      border: none !important;
      padding: 12px 24px !important;
      margin-top: 15px !important;
      margin-bottom: 10px !important;
      border-radius: 10px !important;
      font-size: 16px !important;
      cursor: pointer;
      transition: background-color 0.3s;
      width: 100%;
      max-width: 250px;
      display: block;
      margin-left: auto;
      margin-right: auto;
      text-align: center;
    }

    .html5-qrcode-button-file-selection:hover {
      background-color: #2980b9 !important;
    }

    /* Mobile Responsive */
    @media (max-width: 480px) {
      h1 {
        font-size: 1.5rem;
      }
      #reader {
        padding: 15px;
      }
      button.html5-qrcode-element,
      .html5-qrcode-button-file-selection,
      select.html5-qrcode-select-camera {
        max-width: 90%;
      }
    }
  </style>
</head>

<body>

  <h1>ðŸ“· Scan Your storySCAN QR</h1>

  <div id="reader"></div>
  <p id="result"></p>

  <!-- Load html5-qrcode library -->
  <script src="/LandingAssets/html5-qrcode.min.js"></script>

  <!-- Your custom script -->
  <script>
    const resultElement = document.getElementById('result');

    const scanner = new Html5QrcodeScanner('reader', {
      fps: 10,
      qrbox: 250
    });

    function onScanSuccess(decodedText, decodedResult) {
      console.log(`QR Code detected: ${decodedText}`);
      resultElement.innerText = `Scanned URL: ${decodedText}`;

      setTimeout(() => {
        window.location.href = decodedText;
      }, 1000);
    }

    function onScanFailure(error) {
      // silent
    }

    scanner.render(onScanSuccess, onScanFailure);
  </script>

</body>
</html>